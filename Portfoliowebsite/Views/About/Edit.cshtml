<form method="post" asp-action="Edit" asp-controller="About" enctype="multipart/form-data">

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="User_Id" />
    <input type="hidden" asp-for="ProfilePicture"/>

    <img src="@Model.ProfilePicture" width="200" height="150" />
    <label for="ProfilePicture">Profile Picture:</label>
    <input type="file" name="Profilepic" asp-for="ProfilePicture" class="form-control-file" />

    <span asp-validation-for="FName" class="text-danger" ></span>
    <label>First Name:</label>
    <input type="text" asp-for="FName" /><br /><br />
    <span asp-validation-for="LName" class="text-danger"></span>
    <label>Last Name:</label>
    <input type="text" asp-for="LName" /><br /><br />
    <span asp-validation-for="Address" class="text-danger"></span>
    <label>Address:</label>
    <input type="text" asp-for="Address" /><br /><br />
    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    <label>PhoneNumber:</label>
    <input type="text" asp-for="PhoneNumber" /><br /><br />
    <span asp-validation-for="ProfileEmail" class="text-danger"></span>
    <label>Email:</label>
    <input type="email" asp-for="ProfileEmail" /><br /><br />
    <span asp-validation-for="ProfileDescription" class="text-danger"></span>
    <label>Description:</label>
    <input type="text" asp-for="ProfileDescription" />

    <input type="submit" value="Submit" />
</form>